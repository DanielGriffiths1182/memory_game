!!! 5
%html(lang='en' id="leaderboard")
  %head
    %meta(charset="UTF-8")
    %meta(content="width=device-width, initial-scale=1" name="viewport")
    -# %link(rel='stylesheet'href='../src/js/vendor/jquery-ui.min.css')
    -# %link(rel='stylesheet'href='../lib/styles/main.min.css')
    %link(href="https://fonts.googleapis.com/css?family=ABeeZee|Nunito" rel="stylesheet")
    -# %link(href="../lib/styles/vendor/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet")
    %title UserDetails:MemoryGame
  %body
    %header
      .h1-container
        %h1 The Game of Memory
      #userpage-container
        #userpage-title
          %h2
            Welcome, User!

        %aside#userpage-aside
          %nav
            #goto-leaderboard(href="#") View Top Scores
            #goto-game(href="#") Return To Game


        -# put dummy variables here
        %section#user-table
          -# .table-cell
          #user-score-div
            %h3
              Current Score:
              %div 29
          %ul#user-details
            %li.user-email
              %i#1.fa.fa-envelope
              -# input fields will toggle readonly if edit button is pressed.
              %input#email{readonly:true, type:"text", placeholder:"user@someemail.com"}
            %li.user-password
              %i#1.fa.fa-key
              %input#password{readonly:true, type:"password"}
            %li.user-twitter
              %i#1.fa.fa-twitter
              %input#twitter{readonly:true, type:"text", placeholder: "@twitterhandle"}
            %li.user-facebook
              %i#1.fa.fa-facebook-official
              %input#facebook{readonly:true, type:"text", placeholder: "facebook/page/user"}
            %button#user-details-edit Edit Your Information
            %button#user-details-submit Submit Changes
